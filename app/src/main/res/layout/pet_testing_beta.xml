<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/popup_background">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sending Options"
        android:textSize="20sp"
        android:textColor="#FFFFFF"
        android:gravity="center"
        android:paddingBottom="16dp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:src="@drawable/send"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="10dp"/>

        <Button
            android:id="@+id/button_direct_message"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="#524646"
            android:padding="10dp"
            android:text="Direct Message"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:src="@drawable/logo"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="10dp"/>

        <Button
            android:id="@+id/button_select_tak_server"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="#524646"
            android:padding="10dp"
            android:text="TAK Server"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:src="@drawable/botharrowfinal"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="10dp"/>

        <Button
            android:id="@+id/button_both"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="#524646"
            android:padding="10dp"
            android:text="Both"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />
    </LinearLayout>
        />

</LinearLayout>
